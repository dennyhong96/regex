{
	"name": "node-starter",
	"version": "1.0.0",
	"description": "",
	"main": "src/index.js",
	"scripts": {
		"start": "nodemon src/index.js",
		"lint": "eslint . --ignore-path .gitignore --ext .ts,.tsx,.js,.jsx",
		"lint:fix": "eslint . --ignore-path .gitignore --ext .ts,.tsx,.js,.jsx --fix",
		"format": "prettier --write \"**/*.{js,jsx,json,ts,tsx,mdx,css,scss,md}\"",
		"format:check": "prettier --check \"**/*.{js,jsx,json,ts,tsx,mdx,css,scss,md}\"",
		"test": "jest --coverage",
		"test:watch": "jest --watch"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"devDependencies": {
		"eslint": "^7.20.0",
		"eslint-config-prettier": "^8.1.0",
		"eslint-config-standard": "^16.0.2",
		"eslint-plugin-import": "^2.22.1",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-prettier": "^3.3.1",
		"eslint-plugin-promise": "^4.3.1",
		"husky": "^4.3.8",
		"jest": "^26.6.3",
		"lint-staged": "^10.5.4",
		"nodemon": "^2.0.7",
		"prettier": "^2.2.1"
	},
	"lint-staged": {
		"**/*.{json,mdx,css,scss,md}": [
			"prettier --write"
		],
		"**/*.{js,jsx,ts,tsx}": [
			"eslint --fix"
		],
		"*.{ts,tsx,js,jsx}": "eslint --cache --fix"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	}
}
